{{ 'team-section.css' | asset_url | stylesheet_tag }}

<section class="teams__section">
  <div class="container">
    <div class="teams_container">
      <div class="team__header">
        <span class="team__tag">{{ section.settings.team_tag }}</span>
        <h2 class="team__title">{{ section.settings.team_title }}</h2>
        <p class="team__description">{{ section.settings.team_description }}</p>
      </div>
      <div class="team__members">
        {% if section.blocks.size > 0 %}
          <div class="teams__member-list">
          {% for block in section.blocks %}
            <div class="team__member">
              <img src="{{ block.settings.image | img_url: '300x300'}}" 
                alt="{{ block.settings.name }}" 
                loading="lazy" 
                width="{{ block.settings.image.width }}" 
                height="{{ block.settings.image.height }}" 
                class="block w-fit"
              >
              <div class="team__member-info">
                <h3 class="team__member-name">{{ block.settings.name }}</h3>
                <p class="team__member-rank">{{ block.settings.rank }}</p>
                <div class="team__member-social">
                  <a
                    href="{{ block.settings.facebook_link }}"
                    class="team__member-social-link team__member-social-link--facebook">
                    {% render 'icon-facebook' %}
                  </a>
                  <a
                    href="{{ block.settings.instagram_link }}"
                    class="team__member-social-link team__member-social-link--instagram">
                    {% render 'icon-instagram' %}  
                  </a>
                  <a
                    href="{{ block.settings.twitter_link }}"
                    class="team__member-social-link team__member-social-link--twitter">
                      {% render 'icon-twitter' %} 
                    </a>
                </div>
              </div>
            </div>
          {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Team Section",
  "settings": [
    {
      "type": "text",
      "id": "team_tag",
      "label": "Team Tag",
      "default": "Team"
    },
    {
      "type": "text",
      "id": "team_title",
      "label": "Team Title",
      "default": "Get Quality Education"
    },
    {
      "type": "textarea",
      "id": "team_description",
      "label": "Team Description",
      "default": "Problems trying to resolve the conflict between the two major realms of Classical physics: Newtonian mechanics"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Julian Jameson"
        },
        {
          "type": "text",
          "id": "rank",
          "label": "Profession",
          "default": "Profession"
        },
        {
          "type": "text",
          "id": "facebook_link",
          "label": "Facebook Link"
        },
        {
          "type": "text",
          "id": "instagram_link",
          "label": "Instagram Link"
        },
        {
          "type": "text",
          "id": "twitter_link",
          "label": "Twitter Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Section"
    }
  ]
}
{% endschema %}
